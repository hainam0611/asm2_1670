@model dynamic
@{
    ViewData["Title"] = "SuccessfullyOrder";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        color: #495057;
        padding: 20px;
        line-height: 1.6;
    }

    h1 {
        color: #28a745;
        margin-bottom: 20px;
    }

    .order-summary {
        margin-bottom: 30px;
    }

    .product-info {
        display: flex;
        margin-bottom: 20px;
    }

        .product-info img {
            width: 100px;
            height: auto;
            margin-right: 20px;
        }

        .product-info div {
            flex-grow: 1;
        }

        .product-info h3 {
            color: #007bff;
            margin-top: 0;
        }

        .product-info p {
            margin: 5px 0;
        }

    p.no-items {
        font-size: 18px;
        font-weight: bold;
        color: #dc3545;
    }

    .btn-secondary {
        display: inline-block;
        padding: 12px 24px;
        text-decoration: none;
        color: #fff;
        background-color: #6c757d;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 20px;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>

<h1>Order Placed!</h1>
<p>Thank you for your order! We appreciate your business.</p>
<p>Your book will be shipped within 2-3 days.</p>
<div>
    <a asp-action="Index" class="btn btn-secondary">Back to Index</a>
</div>
